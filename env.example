# ClassPDF Server Environment Configuration
# Copy this file to .env and update with your Oracle Cloud settings

# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=https://your-domain.com,https://your-domain.oraclecloud.com

# Session Security
SESSION_SECRET=your_session_secret

# Database Configuration (Oracle Cloud MySQL/PostgreSQL)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=classpdf
DB_USER=root
DB_PASSWORD=your_password

# Alternative PostgreSQL Configuration
# DB_TYPE=postgresql
# DB_HOST=your-postgres-host.postgres.database.oracle.com
# DB_PORT=5432

# Oracle Autonomous Database Configuration
# DB_TYPE=oracle
# DB_HOST=your-adb-host.adb.region.oraclecloud.com
# DB_PORT=1521
# DB_SERVICE_NAME=your_service_name

# File Storage Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=application/pdf

# AI Service Configuration
AI_MODEL_PATH=/app/models
AI_TRAINING_ENABLED=true
AI_MAX_CONVERSATION_HISTORY=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Oracle Cloud Object Storage (Optional)
OCI_BUCKET_NAME=classpdf-storage
OCI_REGION=us-ashburn-1
OCI_COMPARTMENT_ID=your-compartment-id

# Security Configuration
JWT_SECRET=your_jwt_secret_key
BCRYPT_ROUNDS=12

# Performance Configuration
CLUSTER_MODE=true
MAX_WORKERS=4

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_PDF_PROCESSING=true
ENABLE_REAL_TIME_COLLABORATION=true

# Oracle Cloud Specific
OCI_CONFIG_FILE=/home/nodejs/.oci/config
OCI_PROFILE=DEFAULT

# Authentication
JWT_EXPIRATION=24h

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# File Upload
UPLOAD_DIR=uploads

# AI Configuration (Gemma 3 27B)
GEMMA_MODEL_PATH=./models/gemma-3-27b
GEMMA_MAX_LENGTH=2048
GEMMA_TEMPERATURE=0.7
GEMMA_TOP_P=0.9
GEMMA_TOP_K=40
GEMMA_REPETITION_PENALTY=1.1

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your-bucket-name

# Oracle Cloud Configuration (if using Oracle Cloud)
ORACLE_TENANCY=your_tenancy
ORACLE_USER=your_user
ORACLE_FINGERPRINT=your_fingerprint
ORACLE_PRIVATE_KEY_PATH=path/to/private_key.pem
ORACLE_REGION=us-phoenix-1
ORACLE_COMPARTMENT_ID=your_compartment_id

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# API Keys (if needed)
PDF_API_KEY=your_pdf_api_key
OCR_API_KEY=your_ocr_api_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 0 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups 